<view class="weui-cells">
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">类型</view>
    </view>
    <view class="weui-cell__bd">
      <picker bindchange="coupontypeChange" value="{{coupontypeIndex}}" range="{{couponType}}" range-key="name">
        <view class="picker">{{couponType[coupontypeIndex].name}}</view>
      </picker>
    </view>
    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
  </view>
  <view class="weui-cell weui-cell_input {{coupontypeIndex!=0?'hide':''}}">
    <view class="weui-cell__hd">
      <view class="weui-label">优惠金额</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" type="digit" placeholder-class='pholder'  placeholder="请输入优惠金额（元）" id="discount" bindinput="inputChange" value="{{coupon.discount}}" />
    </view>
  </view>

  <view class="weui-cell weui-cell_input {{coupontypeIndex!=1?'hide':''}}">
    <view class="weui-cell__hd">
      <view class="weui-label">折扣</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" type="digit" placeholder-class='pholder'  placeholder="请输入折扣（大于0小于1）" id="discount" bindinput="inputChange" value="{{coupon.discount}}" />
    </view>
  </view>

  <view class="weui-cell weui-cell_input {{coupontypeIndex!=2?'hide':''}}">
    <view class="weui-cell__hd">
      <view class="weui-label">标题</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" type="text" placeholder-class='pholder'  placeholder="请输入标题" id="title" bindinput="inputChange" value="{{coupon.title}}" />
    </view>
  </view>


  <view class="weui-cell weui-cell_input {{coupontypeIndex==2?'hide':''}}">
    <view class="weui-cell__hd">
      <view class="weui-label">起用金额</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" type="digit" placeholder-class='pholder'  placeholder="请输入起用金额（元）" id="start_money" bindinput="inputChange" value="{{coupon.start_money}}" />
    </view>
  </view>
</view>
<view class="weui-cells">
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">预发张数</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" type="number" placeholder-class='pholder'  placeholder="请输入预发张数" id="total" bindinput="inputChange" value="{{coupon.total}}" />
    </view>
  </view>
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">每人限领</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" type="number" placeholder-class='pholder'  placeholder="请输入每人限取张数" id="restrict" bindinput="inputChange" value="{{coupon.restrict}}" />
    </view>
  </view>
</view>
<view class="weui-cells">
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">开始日期</view>
    </view>
    <view class="weui-cell__bd">
      <picker mode="date" value="{{start_time}}" start="2017-04-19" end="2020-01-01" bindchange="start_timeChange">
        <view class="picker">{{start_time}}</view>
      </picker>
    </view>
  </view>
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">结束日期</view>
    </view>
    <view class="weui-cell__bd">
      <picker mode="date" value="{{end_time}}" start="2017-04-19" end="2020-01-01"  bindchange="end_timeChange">
        <view class="picker">{{end_time}}</view>
      </picker>
    </view>
  </view>
</view>
<view class="weui-cells__title">使用条件</view>
<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell">
    <view class="weui-cell__bd">
      <textarea class="weui-textarea" placeholder-class='pholder'  bindinput="inputChange" id="remark" placeholder="请输入使用条件" style="height: 3.3em" value="{{coupon.remark}}" />
    </view>
  </view>
</view>
<view class="weui-cells__title  {{cid==0?'':'hide'}}">选择一家门店使用</view>
<view class="weui-cells  weui-cells_after-title {{cid==0?'':'hide'}}">
  <view class="weui-cell weui-cell_input" bindtap="chooseStore">
    <view class="weui-cell__hd">
      <view class="weui-label">选择门店</view>
    </view>
    <view class="weui-cell__bd">
      <picker bindchange="storeChange" value="{{storeIndex}}" range="{{storelist}}" range-key="name">
        <view class="picker">{{storelist[storeIndex].name}}</view>
      </picker>
    </view>
    <view class="weui-cell__ft {{isShowStoreList?'weui-cell__ft_in-access_down':'weui-cell__ft_in-access'}}"></view>
  </view>
</view>
<view class="stores weui-cells {{isShowStoreList?'':'hide'}}">
  <view class="weui-cell  weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">全部门店</view>
    </view>
    <view class="weui-cell__bd"></view>
    <view class="weui-cell__ft">
      <checkbox value="" checked="{{allChecked}}" bindtap="allChecked" />
    </view>
  </view>
  <checkbox-group bindchange="checkboxChange">
    <label class="checkbox" wx:for="{{stores}}">
      <view class="weui-cell  weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">{{item.Name}}</view>
        </view>
        <view class="weui-cell__bd"></view>
        <view class="weui-cell__ft">
          <checkbox value="{{item.ID}}" checked="{{item.Checked}}" />
        </view>
      </view>
    </label>
  </checkbox-group>
</view>

<!--<view class="weui-cells__title">至少选择一家门店使用</view>-->
<view class="weui-cells weui-btn-area">
  <button class="weui-btn releasebtn" type="primary" bindtap="save">保存</button>
</view>