.m10 {
  margin-bottom: 10px;
}

.weui-navbar {
  border-bottom: 1px solid #d9d9d9;
  background: #fff;
  color: #7d7d7d;
  margin-bottom: 10px;
}

.weui-navbar__item.weui-bar__item_on {
  color: #48a7dd;
  border-bottom: 1px solid #48a7dd;
}

.weui-navbar__slider {
  background: none;
}

.couponlist {
  padding: 0 15px;
  margin-bottom: 10px;
}

.couponlist .couponlist_con {
  border-radius: 10px;
  border: 1px solid #e5e5e5;
  background: #fff;
}

.couponlist .product {
  padding: 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.couponlist .proimg {
  margin-right: 0.8em;
  width: 70px;
  height: 70px;
  line-height: 70px;
  text-align: center;
  border-radius: 5%;
  border: 1px solid #e5e5e5;
  overflow: hidden;
}

.couponlist .proimg image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.couponlist .procon {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  min-width: 0;
}

.couponlist .name {
  /*font-size: 30rpx;*/
  color: #4f4f4f;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: break-word;
  word-break: break-all;
}

.couponlist .tag {
  float: right;
  color: #ff9600;
  border: 1px solid #ffc000;
  border-radius: 5px;
  /*font-size: 22rpx;*/
  padding: 2px;
}

.couponlist .explain {
  /*font-size: 38rpx;*/
  color: #343434;
  line-height: 1.2;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin: 10rpx 0 30rpx 0;
}

.couponlist .usedate {
  /*font-size: 26rpx;*/
  color: #a3a3a3;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: break-word;
  word-break: break-all;
  border-top: 1px dashed #e5e5e5;
  padding-top: 20rpx;
}

.couponlist .state {
  position: relative;
}

.couponlist .state image {
  position: absolute;
  margin-top: -50px;
  width: 90px;
  height: 90px;
  right: 10px;
  bottom: 10px;
}
