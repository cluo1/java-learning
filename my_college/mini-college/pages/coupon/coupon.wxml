<view class="container">
<view class="m10">
  <view class="weui-navbar">
    <block wx:for-items="{{tabs}}" wx:key="{{index}}">
      <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
        <view class="weui-navbar__title">{{item}}</view>
      </view>
    </block>
    <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
  </view>
</view>










  <view class="weui-tab__panel">
    <view class="weui-tab__content">
      <view class="notData" hidden="{{coupons&&coupons.length>0}}"><image src="/images/nomess.png" class="noicon"></image></view>
      <view class="couponlist" wx:for="{{coupons}}">
        <view class="couponlist_con">
          <navigator url="/pages/coupon/detail?wid={{item.wid}}" class="product">
            <view class="proimg">
              <image class="" src="{{item.logo}}"></image>
            </view>
            <view class="procon">
              <view class="name">{{item.name}}
                <text class="tag fs-08">{{item.typeName}}</text>
              </view>
              <view class="explain fs-12">{{item.title}}</view>
              <view class="usedate fs-08">有效期：{{item.start_time}} - {{item.end_time}}</view>
            </view>
          </navigator>
        </view>
        <view class="state {{dic[activeIndex].state!=1?'':'hide'}}">
          <image src="{{dic[activeIndex].state==2?'/images/used.png':'/images/expired.png'}}"></image>
        </view>
      </view>
    </view>
  </view>
</view>