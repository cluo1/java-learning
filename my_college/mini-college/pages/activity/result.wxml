<view class="container {{isShowPage?'':'hide'}}">
  <view class="head">
    <image src="/images/bg-activity.png" style="width:100%;z-index:0" mode="widthFix"></image>
    <view class="mid">
      <image src="/images/bg-line.png" class="bg-line" style="width: 100%;" mode="widthFix"></image>
      <view class="shareNum" style="left:{{shareNumLeft}}px">
        <view>{{userInfo.share_quantity}}</view>
        <view>分享</view>
      </view>
      <view class="dealNum" style="right:{{shareNumLeft}}px">
        <view>{{userInfo.order_quantity}}</view>
        <view>成交</view>
      </view>
    </view>
    <view class="center" style="left:{{centerLeft}}px">
      <image src="{{userInfo.avatar}}" class="avatar" mode="aspectFill"></image>
      <image src="/images/sort.png" class="sort-image" style="width:{{sortImageWidth}}px" mode="widthFix"></image>
      <view class="sortValue fs-15">{{userInfo.rank}}</view>
      <view class="secret">
        <navigator url="/pages/mall/mall" class="fs-08">帮他超越</navigator>
      </view>
      <view class="remark ">

        <block wx:if="{{userInfo.rank==1}}">
          <text class="fs-08">恭喜~你是第一名</text>          
        </block>
        <block wx:else>
          <text class="fs-08">还有{{userInfo.subtract}}单就超越前一名了</text>
        </block>
      </view>
    </view>
 <view  class="fs-08 award-secret"  bindtap="showTips">领奖秘诀</view>
  </view>
  <view class="output">
    <image src="/images/output.png" style="width: 100%;display:block" mode="widthFix"></image>

  </view>
  <view class="rank-title">
    <image src="/images/rank-title.png" style="width: 100px;" mode="widthFix"></image>
    <view class="refresh" bindtap="refresh">
      <image animation="{{animationData}}" src="/images/activity/refresh.png" mode="widthFix" style="width:18px;"></image>
      <view>刷新</view>
    </view>
  </view>
  <view class="box">


    <view class="weui-cells" style="margin-top:0;border:0;padding-bottom: 10px;">
      <!--<progress percent="100" active="true" stroke-width="2" />-->
      <view class="weui-loadmore {{isShowLoading?'':'hide'}}">
        <i class="weui-loading"></i>
        <text class="weui-loadmore__tips  fs-08">刷新中...</text>
      </view>
      <navigator class="weui-cell" wx:for="{{userInfos}}" url="/pages/card/detail?card_id={{item.card_id}}">
        <view class="weui-cell__hd" style="position: relative;margin-right: 10px;width:20%;text-align:center">

          <block wx:if="{{index==0}}">
            <image class="rank-image" mode="widthFix" src="/images/activity/1.png"></image>
          </block>
          <block wx:if="{{index==1}}">
            <image class="rank-image" mode="widthFix" src="/images/activity/2.png"></image>
          </block>
          <block wx:if="{{index==2}}">
            <image class="rank-image" mode="widthFix" src="/images/activity/3.png"></image>
          </block>
          <block wx:if="{{index>2}}">
            <view>{{index+1}}</view>
          </block>
        </view>
        <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
          <image class="avatar" src="{{item.avatar}}" style="width: 50px;height:50px; display: block"></image>
        </view>
        <view class="weui-cell__bd">
          <view>
            {{item.name}}
          </view>
        </view>
        <view class="weui-cell__ft">
          <block wx:if="{{index==0}}">
            <view style="color:#f84442">{{item.num}}</view>
          </block>
          <block wx:if="{{index==1}}">
            <view style="color:#53b0fe">{{item.num}}</view>
          </block>
          <block wx:if="{{index==2}}">
            <view style="color:#298b04">{{item.num}}</view>
          </block>
          <block wx:if="{{index>2}}">
            <view>{{item.num}}</view>
          </block>
        </view>
      </navigator>

    </view>



  </view>
  <view class="footer">

  </view>
  <!--<view style="padding-bottom:30px">
    <image src="/images/output-end.png" style="width: 100%;display:block" mode="widthFix"></image>
   
  </view>-->
</view>

<view class="popup {{isShowRuleTips?'':'hide'}}">

  <view class="content">
    <view class="nav-title">领奖秘诀</view>
    <view class="close" bindtap="showTips">
      <image src="/images/icon/close.png" mode="widthFix"></image>
    </view>
    <view class="info">
      <view class="title fs-09">活动时间：即日起6月30日</view>
