.container {
  background: #57c2ff;
  position: relative;
  padding-bottom: 20px;
}

.container .title {
  line-height: 3em;
  background: #fff;
  height: 3em;
  padding: 0 1em;
}

.container .title text {
  color: #2b9bdb;
}

.head {
  position: relative;
}

.head .center {
  width: 50%;
  margin: 0 auto;
  text-align: center;
  position: absolute;
  top: 0;
  padding: 5px 0;
  z-index: 1000;
}

.head .mid {
  width: 100%;
  position: absolute;
  top: 45px;
  z-index: 999;
}

.head  .bg-line {
  display: block;
}
.award-secret{
  position: absolute;
  top: 5px;
  right: 10px;
  color:#fff;
  z-index: 1;
}
.head .shareNum, .head .dealNum {
  display: inline-block;
  width: 50px;
  color: #fff;
  text-align: center;
  position: absolute;
}

.head .center .avatar {
  width: 60px;
  height: 60px;
  display: block;
  border: 3px solid #ffc100;
  border-radius: 50%;
  margin: 0 auto;
  /*position: absolute;
  top: 5px;  */
}

.head .center .sort-image {
  margin: 0 auto;
  margin-top: -10px;
  /*position: absolute;
  top: 60px;  */
}

.head .center .sortValue {
  color: #fff;
  margin-top: -30px;
}

.head .center .secret {
  background: #ffc100;
  color: #bd5715;
  border-radius: 1.5em;
  width: 6em;
  margin: 0 auto;
  font-weight: bold;
}

.head .center .remark {
  color: #fff;
}

.rank-title {
  width: 94.5%;
  background: #fff;
  text-align: center;
  margin: 0 auto;
  position: relative;
}

.box {
  background: #fff;
  width: 94.5%;
  margin: 0 auto;
}

.footer {
  background: #fff;
  width: 94.5%;
  margin: 0 auto;
  height: 2em;
  border-radius: 0 0 10px 10px;
}

.box .avatar {
  border-radius: 50%;
}

.box .rank-image {
  width: 20px;
}

.refresh {
  position: absolute;
  right: 15px;
  top: 10px;
  color: #57c2ff;
}

.refresh image {
  vertical-align: middle;
}

.refresh view {
  margin-left: 4px;
  display: inline-block;
  vertical-align: middle;
}

.weui-cell__bd .des {
  color: #888;
}

.weui-cell__bd .tag {
  color: #888;
  border: 1px solid #ccc;
  position: absolute;
  margin-left: 5px;
}

.weui-cell__ft view {
  display: inline-block;
  vertical-align: middle;
}

.weui-cell__ft image {
  width: 12px;
  height: 14px;
  vertical-align: middle;
  margin-right: 2px;
}

.popup {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
  background: rgba(0, 0, 0, 0.7);
  z-index: 1001;
}

.popup .content {
  position: absolute;
  width: 84%;
  top: 20px;
  left: 8%;
  background: #fff;
  text-align: left;
  margin: 0 auto;
  border-radius: 0.5em;
}

.popup .content .info {
  padding:0 1em 1em 1em;
}

.popup .content .title {
  line-height: 2em;
}
.popup .content .step{
  color: #48a7dd;
}
.popup .content .submit{
  background: #48a7dd;
  color: #fff;
  width: 30%;
  margin: 0 auto;
  border-radius: 5px;
  padding: 5px 10px;
  text-align: center;
  margin-top: 1em;
}
.popup  .nav-title {
  line-height: 3em;
  color: #48a7dd;
  font-weight: bold;
  padding: 0 1em;
  border-bottom: 1px solid #48a7dd;
}

.popup .content .close {
  
  display: inline-block;
  position: absolute;
  right: 10px;
  top: 10px;
  /*padding:0 10px;*/
}
.popup .content .close image{
  width: 20px;
}
