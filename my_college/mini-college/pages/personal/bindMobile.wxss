page {
  background: #fff;
}

.message {
  margin-top: 1em;
}

.message .list {
  padding: 0 15px;
}

.message .list .same {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-bottom: 1px solid #e5e5e5;
  padding: 15px 0;
}

.message .list .title image {
  width: 30px;
  height: 30px;
  line-height: 30px;
  vertical-align: middle;
  background: green;
}

.message .list .title {
  color: #373737;
  margin-right: 1em;
  height: 1.1em;
  line-height: 1.1em;
  /*font-size: 1em;*/
}

.message .list .desc {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: left;
  color: #868686;
  line-height: 1.1em;
  margin-top: 2px;
}

.message .list .desc input, .message .list .desc textarea,
.message .list .desc .weui-select {
  clear: both;
  height: 1.1em;
  line-height: 1.1em;
  /*font-size: 1.1em;*/
  border-right: 0;
}

.message .list .desc .weui-select {
  position: relative;
  padding: 0;
  height: 1.1em;
  min-height: 0;
  line-height: 1.1em;
  border-right: 0;
}

.message .list .desc textarea, .message .list .desc .weui-select {
  /*font-size: 1em !important;*/
}

.releasebtn {
  background: #48a7dd !important;
  margin-bottom: 1.17647059em;
  border-radius: 0px;
}

.checkcode {
  border: 1px solid #48a7dd;
  background: #48a7dd;
  color: #fff;
  padding: 0 1em;
}

.getcheckcode {
  border: 1px solid #ccc;
  background: #ccc;
  color: #fff;
  padding: 0 1em;
}
