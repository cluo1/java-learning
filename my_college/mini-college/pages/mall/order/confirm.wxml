        <view class="weui-cell__bd">
          <image src="/images/activity/banner.png" style="width:100%" mode="widthFix"></image>
        </view>
      </view>-->
<view class="popup {{isShowSuccessTips?'':'hide'}}">
  <view class="content">
    <view class="weui-cells__title fs-12">付款成功</view>
    <view class="close" bindtap="closeTips">
      <image src="/images/icon/close.png" mode="widthFix" style="width:20px"></image>
    </view>
    <view class="weui-cells  weui-cells_after-title">

      <view class="weui-cell-reset" bindtap="redirectMall" >
        <view class="weui-cell__bd">
          <image src="/images/activity/banner-1.png" style="width:100%" mode="widthFix"></image>
        </view>
      </view>
      <view class="weui-cell-reset">

        <navigator class="weui-cell__bd" url="/pages/activity/result" open-type="redirect">
          转发有奖！去看看排位
          <image src="/images/icon/link.png" class="link" mode="widthFix"></image>
        </navigator>
      </view>

    </view>

  </view>
</view>