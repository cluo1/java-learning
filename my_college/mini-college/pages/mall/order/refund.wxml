<view class="container">
  <view class="weui-cells__title">退款类型*</view>
  <view class="weui-cells  weui-cells_after-title">
    <radio-group class="radio-group" bindchange="refundTypeChange">
      <view class="weui-cell weui-cell_input" wx:for="{{refundType}}">
        <!--<view class="weui-cell__hd">
        <view class="weui-label"></view>
      </view>-->
        <view class="weui-cell__bd">
          {{item.name}}
        </view>
        <view class="weui-cell__fd">
          <radio value="{{item.type}}" color="#48a7dd" checked="{{refundInfo.type==item.type?'checked':''}}" name="refundType" />
        </view>
      </view>
    </radio-group>
  </view>




  <view class="weui-cells__title {{refundInfo.type==1?'':'hide'}}">收货状态*</view>
  <view class="weui-cells  weui-cells_after-title {{refundInfo.type==1?'':'hide'}}">
    <radio-group class="radio-group" bindchange="deliveryStatusChange">
      <view class="weui-cell weui-cell_input" wx:for="{{deliveryStatus}}">
        <!--<view class="weui-cell__hd">
        <view class="weui-label"></view>
      </view>-->
        <view class="weui-cell__bd">
          {{item.name}}
        </view>
        <view class="weui-cell__fd">
          <radio value="{{item.type}}"  color="#48a7dd"  checked="{{refundInfo.delivery==item.type?'checked':''}}" name="refundType" />
        </view>
      </view>
    </radio-group>
  </view>

  <view class="weui-cells__title">退款原因*</view>
  <view class="weui-cells  weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__bd">
        <picker bindchange="refundReasonChange" value="{{refundReasonIndex}}" range="{{refundReason}}">
          <view class="picker">{{refundReason[refundReasonIndex]}}</view>
        </picker>
      </view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </view>
  </view>

  <view class="weui-cells__title">退款金额* （最多￥{{maxAmount}}）</view>
  <view class="weui-cells  weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__bd">
        <input class="weui-input" type="digit" placeholder-class='pholder' placeholder="请输入退款金额" id="total" bindinput="inputChange" value="{{refundInfo.total}}" />
      </view>
    </view>
  </view>

  <view class="weui-cells__title">退款说明（可不填）</view>
  <view class="weui-cells  weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__bd">
        <input class="weui-input" type="text" placeholder-class='pholder' placeholder="请输入退款说明" id="content" bindinput="inputChange" value="{{refundInfo.content}}" />
      </view>
    </view>
  </view>




  <view class="page__bd" style="padding-bottom:10px">
    <view class="weui-cells weui-cells_form">
      <view class="weui-cell">
        <view class="weui-cell__bd">
          <view class="weui-uploader">
            <view class="weui-uploader__hd">
              <view class="weui-uploader__title">上传凭证最多3张</view>
              <view class="weui-uploader__info">{{uploadImages.length}}/{{maxUploadImageNum}}</view>
            </view>
            <view class="weui-uploader__bd">
              <view class="weui-uploader__files" id="uploaderFiles">
                <view class="weui-uploader__file" wx:for="{{uploadImages}}" style="width:{{imgWidth}}px;height:{{imgWidth}}px;margin:0 9px 9px 0;">
                  <image src="{{item}}" style="width:{{imgWidth}}px;height:{{imgWidth}}px;" mode="aspectFit"></image>
                  <view class="btn-delete">
                    <icon type="clear" size="25" data-index="{{index}}" bindtap="deleteImage" />
                  </view>
                </view>
              </view>
              <view class="weui-uploader__input-box {{uploadImages.length>=maxUploadImageNum?'hide':''}}" style="width:{{imgWidth}}px;height:{{imgWidth}}px;">
                <view id="uploaderInput" class="weui-uploader__input" bindtap="chooseImages"></view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>


  <view class="fix-bottom">

    <view class="submit"  bindtap="submit">提交申请</view>

  </view>
</view>