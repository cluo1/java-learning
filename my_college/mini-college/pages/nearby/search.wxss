@import "/wxss/same.wxss";

.nav {
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
  color: #7d7d7d;
  margin-bottom: 0.5em;
  /*font-size: 1em;*/
}

.search {
  margin-top: 1px;
  background: #fafafa;
  line-height: 3em;
   height: 3.1em;
}

.search  scroll-view {
  line-height: 3em;
  height: 3.1em;
  float: left;
  white-space: nowrap;
}

.search scroll-view view {
  display: inline-block;
  padding: 0em 0.5em;
}

.search .icon {
  line-height: 3em;
  height: 3.1em;
  width: 10%;
  float: right;
  text-align: center;
}

.search .icon image {
  width: 1.2em;
  height: 1.2em;
}

.tag-on {
  color: #48a7dd;
  border-bottom: 1px solid #48a7dd;
}

.search .on {
  color: #48a7dd;
  border-bottom: 1px solid #48a7dd;
}

/*定位到右边*/

.fixR {
  right: 0;
}

.users {
  height: 100%;
}

.user-item {
  height: 100px;
  margin-top: 5px;
  background-color: #fff;
}

.avatar image {
  width: 70px;
  height: 70px;
  margin: 15px;
  border-radius: 5px;
}

.info {
  height: 100px;
}

.info view {
  line-height: 30px;
  height: 30px;
  margin: 2px;
}

.title {
  font-weight: bold;
  /*font-size: 1.2em;*/
  color: #9b9b9b;
}

.wxSearch-section {
  background-color: #fff;
  padding: 5px 10px;
  border: 1px #eee solid;
}

.wxSearch-pancel {
  margin: 0 auto;
  width: 95%;
  border-radius: 5px;
}

.wxSearch-input {
  flex: 8;
  background-color: #eee;
  padding: 5px 10px;
}

.wxSearch-button {
  flex: 1;
  border: none !important;
  color: cornflowerblue !important;
}

.wxSearchTitle {
  display: block;
  padding: 10px 5px 5px 10px;
  /*font-size: 12px;*/
  text-align: center;
}

.container {
  clear: both;
  height: 100%;
}

.loading {
  color: #888;
  text-align: center;
  line-height: 30px;
}

.couponlist {
  margin-bottom: 10px;
}

.couponlist .couponlist_con {
  border: 1px solid #e5e5e5;
  background: #fff;
}

.couponlist .product {
  padding: 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.couponlist .proimg {
  margin-right: 0.8em;
  width: 70px;
  height: 70px;
  line-height: 70px;
  text-align: center;
  border-radius: 50%;
  border: 1px solid #e5e5e5;
  overflow: hidden;
}

.couponlist .proimg image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.couponlist .procon {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  min-width: 0;
}

.couponlist .name {
  /*font-size: 1.5em;*/
  color: #4f4f4f;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: break-word;
  word-break: break-all;
}

.couponlist .tag {
  float: right;
  color: #ff9600;
  border: 1px solid #ffc000;
  border-radius: 5px;
  /*font-size: 1.1em;*/
  padding: 2px;
}

.couponlist .explain {
  /*font-size: 1.9em;*/
  color: #343434;
  line-height: 1.2;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin: 10rpx 0 30rpx 0;
}

.couponlist .usedate {
  /*font-size:1.1em !important;*/
  color: #a3a3a3;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: break-word;
  word-break: break-all;
  border-top: 1px dashed #e5e5e5;
  padding-top: 15px;
}

.couponlist .distance {
  float: right;
  /*font-size: 1.1em;*/
  color: #a3a3a3;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: break-word;
  word-break: break-all;
}
