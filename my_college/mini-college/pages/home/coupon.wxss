

.advert image{
  width: 100%; 
}
.box{
  margin-top: 5px;
}
.box image{
  border-right: 1px dotted #ccc;
  padding-right: 10px;
  margin-right: 10px;
}
.box .remark{
  color: #bebebe;
}

.box .tag view{
  background: #fc2222;
  color: #fff;
  border-radius: 0.8em;
  text-align: center;
}
.couponlist {
  margin-bottom: 10px;
}

.couponlist .couponlist_con {
  border: 1px solid #e5e5e5;
  background: #fff;
}

.couponlist .product {
  padding: 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.couponlist .proimg {
  margin-right: 0.8em;
  width: 70px;
  height: 70px;
  line-height: 70px;
  text-align: center;
  border-radius: 50%;
  border: 1px solid #e5e5e5;
  overflow: hidden;
}

.couponlist .proimg image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.couponlist .procon {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  min-width: 0;
}

.couponlist .name {
  /*font-size: 1.5em;*/
  color: #4f4f4f;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: break-word;
  word-break: break-all;
}

.couponlist .tag {
  float: right;
  color: #ff9600;
  border: 1px solid #ffc000;
  border-radius: 5px;
  /*font-size: 1.1em;*/
  padding: 2px;
}

.couponlist .explain {
  /*font-size: 1.9em;*/
  color: #343434;
  line-height: 1.2;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin: 10rpx 0 30rpx 0;
}

.couponlist .usedate {
  /*font-size:1.1em !important;*/
  color: #a3a3a3;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: break-word;
  word-break: break-all;
  border-top: 1px dashed #e5e5e5;
  padding-top: 15px;
}

.couponlist .distance {
  float:right;
  /*font-size: 1.1em;*/
  color: #a3a3a3;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: break-word;
  word-break: break-all;
}

.title{
  
  height: 2em;
  line-height: 2em;
  margin-top: 5px;
  padding: 0 15px;
}

.weui-tab__panel .loadMore{
  width: 100%;
  height: 2em;
  /*line-height: 2em;*/
  text-align: center;
  text-decoration: underline;
  color: #bebebe
  
}

/*--------导航栏---------  */

.bottom_nav{
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  background: #ffffff;
  border-top: 1rpx solid #eeeeee;
  display: flex;
  height: 100rpx;
}
.bottom_nav .nav_list{
  width: 20%;
  text-align: center;
}
.bottom_nav .nav_list image{
  width: 50rpx;
  height: 50rpx;
    position: relative;
  top: 5rpx;
}
.bottom_nav .nav_list:nth-child(3) image{
  width: 77rpx;
  height: 82rpx;
  position: relative;
  top: -23rpx;
}
.bottom_nav .nav_list:nth-child(3) .text{
  position: relative;
  top: -31rpx;
}

.bottom_nav .nav_list:nth-child(4) .text{
  color:#34aadc; 
}
.bottom_nav .nav_list{
  font-size: 22rpx;
  color: #6f7378;
}