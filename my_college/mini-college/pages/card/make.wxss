page {
  background: #fff;
}

.distance {
  height: 20px;
  background: #efeff4;
}

.basic {
  margin-bottom: 10px;
}

.basic .my {
  padding: 10px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.basic .myphoto {
  margin-right: 0.8em;
  width: 70px;
  height: 70px;
  line-height: 70px;
  text-align: center;
  border: 1px solid #e5e5e5;
  overflow: hidden;
}

.basic .myphoto image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.basic .mymess {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  min-width: 0;
}

.basic .name, .basic .phone {
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: break-word;
  word-break: break-all;
  /*font-size: 1.6em;*/
  color: #5a5a5a;
}

.basic .name {
  /*font-size: 1.6em;*/
  border-bottom: 1px solid #e5e5e5;
  margin-bottom: 10px;
  padding-bottom: 5px;
}
.message{
  padding-bottom: 50px;
}

.message .list {
  padding: 0 15px;
}

.message .list .same {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-bottom: 1px solid #e5e5e5;
  padding: 15px 0;
}

.message .list .title image {
  width: 30px;
  height: 30px;
  line-height: 30px;
  vertical-align: middle;
  background: green;
}

.message .list .title {
  color: #373737;
  margin-right: 1em;
  height: 30px;
  line-height: 30px;
  /*font-size: 1.4em;*/
}

.message .list .desc {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: left;
  color: #868686;
  line-height: 1.6;
  margin-top: 2px;
}

.message .list .desc input, .message .list .desc textarea,
.message .list .desc .weui-select {
  clear: both;
  height: 25px;
  line-height: 25px;
  /*font-size: 1.4em;*/
  border-right: 0;
}

.message .list .desc .weui-select {
  position: relative;
  padding: 0;
  height: 25px;
  min-height: 0;
  line-height: 30px;
  border-right: 0;
}

.message .list .desc textarea, .message .list .desc .weui-select {
  /*font-size: 25rpx !important;*/
}

.message .list .desc textarea {
  width: auto;
  height: 90px;
  line-height: 90px;
  border: 1px solid #e5e5e5;
  padding: 5px;
}

.btn-submit {
  background: #48a7dd;
  color: #fff;
  border: 0;
  border-radius: 0 !important;
  width: 80%;
  text-align: center;
}

.red {
  color: red;
  height: 30px;
  line-height: 30px;
  display: inline-block;
}

.location {
  width: 30px;
  text-align: center;
}

.location image {
  width: 20px;
  height: 20px;
  line-height: 30px;
  vertical-align: middle;
}

.weui-uploader__files .weui-uploader__file {
  position: relative;
  float: left;
}

.weui-uploader__files .weui-uploader__file image{
  -webkit-box-shadow: 0 0 10px #e0dede;
  -moz-box-shadow: 0 0 10px #e0dede;
  box-shadow: 0 0 10px #e0dede;
}

.weui-uploader__files .btn-delete {
  position: absolute;
  top: 2px;
  right: 2px;
  
}
