<view class="container">

 
  <view class="weui-search-bar">
    <view class="weui-search-bar__form">
      <view class="weui-search-bar__box">
        <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
        <input type="text" class="weui-search-bar__input" placeholder="搜索" value="{{keyword}}" focus="{{inputShowed}}" bindconfirm="inputTyping" />
        <view class="weui-icon-clear" wx:if="{{keyword.length > 0}}" bindtap="clearInput">
          <icon type="clear" size="14"></icon>
        </view>
      </view>
      <label class="weui-search-bar__label" hidden="{{inputShowed}}" bindtap="showInput">
        <icon class="weui-icon-search" type="search" size="14"></icon>
        <view class="weui-search-bar__text">搜索</view>
      </label>
    </view>
    <view class="weui-search-bar__cancel-btn" hidden="{{!inputShowed}}" bindtap="hideInput">取消</view>
  </view>

 <view class="tag flex-wrp">
    <view class="flex-item" bindtap="redirectApplicants" data-tag="coupons" style="border-right:1px #e5e5e5 solid">
      <image src="{{hasNewApply?'/images/newfriend_h.png':'/images/newfriend.png'}}"></image>

      <view class="weui-cell__bd">
        <view>新的好友</view>
        <view class="remark fs-08">扩展你的人脉</view>
      </view>
    </view>
    <view class="flex-item " bindtap="redirectLookers" data-tag="nearby">
      <image src="/images/viewer.png"></image>
      <view class="weui-cell__bd">
        <view>谁看过我</view>
        <view class="remark fs-08">访客记录</view>
      </view>
    </view>
  </view>

  <view class="notData {{cardlist&&cardlist.length>0?'hide':''}}">

    <!--名片夹是空的-->
    <image src="/images/nomess.png" class="noicon"></image>
  </view>
  <view class="cardlist" wx:for="{{cardlist}}">
    <navigator class="cardlist_con product" url="/pages/card/detail?card_id={{item.card_id}}">
      <view class="proimg" bindtap="openbcarddetail">
        <image class="" src="{{item.avatar}}"></image>
      </view>
      <view class="procon" bindtap="openbcarddetail">
        <view class="name">{{item.name}}</view>
        <view class="trade">{{item.duty}}</view>
      </view>
      <view class="call" catchtap="calling" data-value="{{item.mobile}}">
        <image class="" src="/images/phone_gray.png"></image>
      </view>
    </navigator>
  </view>
  <!--<view class="loading {{isShowLoading?'':'hide'}}">加载中...</view>-->
  <view class="weui-loadmore {{isShowLoading&&hasMore?'':'hide'}}">
    <i class="weui-loading"></i>
    <text class="weui-loadmore__tips fs-08">正在加载</text>
  </view>
  <view class="weui-loadmore weui-loadmore_line {{cardlist.length<=0||hasMore||isShowLoading?'hide':''}}">
    <text class="weui-loadmore__tips fs-08">我也是有底线的</text>
  </view>

  <!--<view class="loading {{hasMore?'hide':''}}">我也是有底线的</view>-->
</view>