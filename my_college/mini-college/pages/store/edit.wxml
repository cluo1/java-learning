<view class="weui-cells">
  <view class="weui-cell weui-cell_select">
    <view class="weui-cell__hd weui-cell__hd_in-select-after">
      <view class="weui-label">门店logo</view>
    </view>
    <view class="weui-cell__bd">

      <!--<view class="tips">上传一张</view>-->
      <image class="logo" src="{{logo?logo:'/images/addimg.png'}}" bindtap="chooseLogo"></image>
    </view>
  </view>
</view>
<view class="weui-cells">
  <view class="weui-cells_after-title">
   <view class="weui-cell weui-cell_access" style="padding:0px 15px;">
      <view class="weui-cell__hd">
        <view class="weui-label">行业</view>
      </view>
      <view class="weui-cell__bd">
         <picker bindchange="industryChange" value="{{item.cid}}" range="{{industrylist}}" range-key="name">

          <view class="weui-input">{{industry?industry:'选择行业'}}</view>
        </picker>
      </view>
      <view class="weui-cell__ft_in-access"></view>
    </view>

    <view class="weui-cell weui-cell_access {{subclass&&subclass.length>0?'':'hide'}}">
      <view class="weui-cell__hd subclass">
         <view class="item fs-08 {{item.checked?'on':''}}" data-cid="{{item.cid}}" wx:for="{{subclass}}" bindtap="subclassChange">{{item.name}}</view> 
       </view>
    </view>
    <!--<view class="weui-cell weui-cell_select">
      <view class="weui-cell__hd weui-cell__hd_in-select-after">
        <view class="weui-label">行业</view>
      </view>
      <view class="weui-cell__bd">
        <picker bindchange="industryChange" value="{{item.cid}}" range="{{industrylist}}" range-key="name">
          <view class="picker">{{industry?industry:'选择行业'}}</view>
        </picker>
      </view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </view>-->
    <view class="weui-cell weui-cell_select">
      <view class="weui-cell__hd weui-cell__hd_in-select-after">
        <view class="weui-label">门店名称</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" placeholder-class='pholder' placeholder="请输入门店名称" id="name" bindinput="inputChange" value="{{store.name?store.name:''}}" />
      </view>
    </view>
  </view>
</view>
<view class="weui-cells__title">门店简介</view>
<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell">
    <view class="weui-cell__bd">
      <textarea class="weui-textarea" placeholder-class='pholder' placeholder="请填写门店简介（不超过50字）" style="height: 3.3em" id="intro" bindinput="inputChange" value="{{store.intro?store.intro:''}}" />
    </view>
  </view>
</view>
<view class="weui-cells">
  <view class="weui-cells_after-title">
    <view class="weui-cell weui-cell_select">
      <view class="weui-cell__hd weui-cell__hd_in-select-after">
        <view class="weui-label">门店电话</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" type="number" placeholder-class='pholder' placeholder="请输入门店电话" id="tel" bindinput="inputChange" value="{{store.tel?store.tel:''}}" />
      </view>
    </view>
    <view class="weui-cell weui-cell_select">
      <view class="weui-cell__hd weui-cell__hd_in-select-after">
        <view class="weui-label">联系人</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" placeholder="请输入联系人姓名" placeholder-class='pholder' id="linkman" bindinput="inputChange" value="{{store.linkman?store.linkman:''}}" />
      </view>
    </view>
  </view>
</view>
<view class="weui-cells">
  <view class="weui-cell weui-cell_access" bindtap="openMap">
    <view class="weui-cell__bd">
      <view>门店地址</view>
    </view>
    <view class="weui-cell__ft_in-access">
    </view>
  </view>
  <view class="weui-cell {{isShowLocation?'':'hide'}}">
    <view class="weui-cell__bd">
      <textarea class="weui-textarea" placeholder-class='pholder' value="{{address}}" style="height: 2.2em" id="address" bindinput="inputChange" value="{{address?address:''}}" />
    </view>
  </view>
</view>
<view class="fs-08 weui-cells__title  {{isShowLocation?'hide':''}}">选择地址后可手动修改地址细节</view>

  <view class="page__bd" style="padding-bottom:10px">
    <view class="weui-cells weui-cells_form">
      <view class="weui-cell">
        <view class="weui-cell__bd">
          <view class="weui-uploader">
            <view class="weui-uploader__hd">
              <view class="weui-uploader__title">图片</view>
              <view class="weui-uploader__info">{{uploadImages.length}}/{{maxUploadImageNum}}</view>
            </view>
            <view class="weui-uploader__bd">
              <view class="weui-uploader__files" id="uploaderFiles">
                <view class="weui-uploader__file" wx:for="{{uploadImages}}" style="width:{{imgWidth}}px;height:{{imgWidth}}px;margin:0 9px 9px 0;">
                  <image src="{{item}}" style="width:{{imgWidth}}px;height:{{imgWidth}}px;" mode="aspectFit"></image>
                  <view class="btn-delete"><icon type="clear" size="25"  data-index="{{index}}" bindtap="deleteImage"/></view>
                </view>
              </view>
              <view class="weui-uploader__input-box {{uploadImages.length>=maxUploadImageNum?'hide':''}}" style="width:{{imgWidth}}px;height:{{imgWidth}}px;">
                <view id="uploaderInput" class="weui-uploader__input" bindtap="chooseImages"></view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>

<view class="weui-cells__title blue">
  <checkbox value="" checked="checked" bindtap="checkboxChange" />我已同意
  <navigator url="/pages/personal/agreement" class="underline">天天卡券用户服务协议</navigator>
</view>
<view class="weui-cells weui-btn-area">
  <button class="weui-btn releasebtn" type="primary" bindtap="save">保存</button>
</view>